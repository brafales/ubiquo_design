<div id='shadow' style="display:none"></div>
<h1><%= render :partial => 'title' %></h1>
<h2><%= render :partial => 'submenu' %></h2>
<%= render :partial => "shared/ubiquo/feedback" %>
<div id="template"><%= @template_content %></div>

<% content_for :sidebar do %>
<div id="slide_wrapper">
  <div class="sidebar_box">
    <div id="page_info">
      <%= render :partial => 'pageinfo_sidebar',
                 :locals => { :page => @page, :page_type => 'page' } %>
    </div>
  </div>
  <div class="sidebar_box">
    <div id="widgets">
      <div class="sidebar_title">
        <h3><%= t('ubiquo.design.avaliable_widgets') %></h3>
      </div>
      <div class="widget_categories">
        <label for="widget_categories_select"><%= t('ubiquo.design.widget_categories') %>:</label>
        <select id="widget_categories_select" name="widget_categories_select">
          <option>All</option>
          <option>Category 1</option>
          <option>Category 2</option>
        </select>
      </div>
      <ul id="available_widgets" class="available_widgets makeScroll">
            <%= render :partial => "widget_sidebar", :collection => @widgets %>
      </ul>
    </div>
  </div>
</div>
<% end %>
