<%= error_messages_for 'page' %>
<div class="form_box">
  <%= uhook_form_top f %>
  <p>
    <%= f.label :name, Page.human_attribute_name("name") %> 
    <%= f.text_field :name %>
  </p>
  <fieldset>
    <legend><%= t('ubiquo.design.situation') %></legend>
    <p>
      <%= f.label :parent_id, Page.human_attribute_name("parent_id") %>
      <%= f.select :parent_id, parent_pages_for_select(@pages) %>
    </p>
    <p>
      <%= f.label :url_name, Page.human_attribute_name("url_name") %>
      <%= f.text_field :url_name %>
      <%= t("ubiquo.design.page_url_example") %>
      <span id="url_example">http://www.ubiquo.me/<%= @page.url_name %></span>
    </p>
  </fieldset>
  <% if f.object.new_record? %>
    <fieldset>
      <legend><%= t('ubiquo.design.page_template') %></legend>
      <ul class="page_templates">
	<% @page_templates.each do |template| %>
          <li>
	    <%= f.radio_button(:page_template_id, template.id) %>
	    <%= f.label "page_template_id_#{template.id}", template.name %>
	    <%= image_tag(template.thumbnail.url, 
                         :id => "page_template_id_#{template.id}",
	                 :onclick => "$('page_' + this.id).click(); return false;") %>
          </li>		        
	<% end %>
      </ul>
    </fieldset>
  <% end %>
</div>
